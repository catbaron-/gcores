{
    "manifest_version": 2,

    "name": "game-cores",
    "description": "An extension of game-cores",
    "version": "1.0",

    "browser_action": {
        "default_icon": {
            "19": "images/g19.png",
            "48": "images/g48.png",
            "128": "images/g128.png"
        },
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "jquery.min.js",
            "g-cores.js"
        ]
    },
    "permissions": [
        "activeTab",
        "tabs",
        "webNavigation",
        "cookies",
        "*://*.g-cores.com/*"
    ],
    "content_scripts": [{
        "matches": ["*://*/*"],
        "js": ["jquery.min.js"]
    }]
}
